background-size: 20px 20px;
height: 100vh;
display: flex;
align-items: center;
justify-content: center;
}
#otp {
width: 100%;
background-color: #1f2937;
border: none;
color: white;
padding: 14px;
border-radius: 8px;
font-size: 16px;
outline: none;
}
#otp:focus {
box-shadow: 0 0 0 2px rgba(255, 59, 48, 0.3);
}
