<body>
<div class="w-full max-w-md px-6 py-8">
<div class="flex flex-col items-center mb-8">
<div class="flex items-center justify-center text-primary mb-4">
<div class="w-12 h-12 flex items-center justify-center">
<i class="ri-camera-line ri-3x"></i>
</div>
<span class="font-['Pacifico'] text-4xl ml-2">Ucam</span>
</div>
</div>
<div class="mb-8">
<h1 class="text-white text-2xl font-semibold text-center">Email Verification</h1>
</div>

<form method="post">
<div class="space-y-5">
            <% if (messeage && messeage.type == "danger") { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert" 
                    style="color: #ff4d4f;  font-weight: bold; margin-bottom: 10px; font-size: 20px; ">
                        <%= messeage.notify %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"
                    style="filter: invert(1) brightness(2);"></button>
                </div>
            <% } %>
            </div>
<div class="mb-6">
<h2 class="text-white text-xl font-medium mb-2">Enter Email</h2>
<p class="text-gray-400 text-sm mb-4">Please enter your email address to receive verification code</p>
<div class="flex items-center bg-[#1f2937] !rounded-button mb-6">
<div class="w-12 h-12 flex items-center justify-center text-gray-400">
<i class="ri-mail-line ri-lg"></i>
</div>
<input type="email" id="email" placeholder="Enter your email" class="w-full bg-transparent text-white px-2 py-3 border-none outline-none text-sm" required name = "email">
</div>
</div>
<button id="createaccount" class="w-full bg-primary text-white py-3 font-medium !rounded-button whitespace-nowrap">Send Code</button>
</div>
</form>

<div id="custom-alert" class="custom-alert">
    <span class="alert-icon">!</span>
    <span class="alert-message" id="alert-message">This is an alert</span>
    <button class="close-alert" onclick="hideAlert()">&times;</button>
</div>



